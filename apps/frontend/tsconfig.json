{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    // "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "incremental": true,
    "types": [
      "jest",
      "node"
    ],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "**/[*].tsx",
    "**/[...*].tsx",
    "jest.config.js",
    "../../libs/discus/src/lib/services/giscus/filterDiscussionsByCommentID.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/katexSlatePlugin.tsx"
  ]
}
