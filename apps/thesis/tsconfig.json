{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    // "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "incremental": true,
    "types": [
      "jest",
      "node"
    ],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext"
  },
  "include": [
    "**/*.ts",
    "**/*.d.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "**/[*].tsx",
    "**/[...*].tsx"
  ],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "**/katexSlatePlugin.tsx"
  ]
}
