{
  "compileOnSave": false,
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    //"transpileOnly": true,
    "compilerOptions": {
      "module": "NodeNext",
      "target": "ESNext",
      "moduleResolution": "NodeNext"
    },
    "esm": true,
    "swc": true
    // "experimentalResolverFeatures": true,
    // "experimentalSpecificierResolution": "node"
    // "preferTsExts": true
  },
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "NodeNext",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ESNext",
    "module": "NodeNext",
    "lib": ["es2021", "DOM"],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipDefaultLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@zkp/discus": ["libs/discus/src/index.ts"],
      "@zkp/git": ["libs/git/src/index.ts"],
      "@zkp/paths": ["libs/paths/src/index.ts"],
      "@zkp/popover": ["libs/popover/src/index.ts"],
      "@zkp/redis": ["libs/redis/src/index.ts"],
      "@zkp/scripts": ["libs/scripts/src/index.ts"],
      "@zkp/types": ["libs/types/src/index.ts"],
      "@zkp/ui": ["libs/ui/src/index.ts"],
      "try-catch": ["libs/utils/try-catch/src/index.ts"],
      "zkp-editor": ["libs/zkp-editor/src/index.ts"],
      "@zkp/slugify": ["libs/utils/slugify/src/index.ts"],
      "@zkp/mdx": ["libs/utils/mdx/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
